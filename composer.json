{
  "name": "farkledice/farkle-ten",
  "description": "Farkle Ten multiplayer dice game",
  "type": "project",
  "require": {
    "php": "^8.3",
    "ext-pdo": "*",
    "ext-pdo_pgsql": "*",
    "ext-mbstring": "*",
    "smarty/smarty": "^4.5",
    "symfony/framework-bundle": "^7.2",
    "symfony/twig-bundle": "^7.2",
    "symfony/yaml": "^7.2",
    "symfony/dotenv": "^7.2",
    "symfony/routing": "^7.2",
    "symfony/http-foundation": "^7.2",
    "symfony/runtime": "^7.2",
    "doctrine/orm": "^3.3",
    "doctrine/doctrine-bundle": "^2.13",
    "doctrine/dbal": "^4.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "symfony/maker-bundle": "^1.62"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "classmap": ["includes/"]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "symfony/runtime": true
    }
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd"
    }
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "7.2.*"
    }
  }
}

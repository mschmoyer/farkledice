# Symfony environment configuration
# Copy to .env.local for local overrides (do not commit .env.local)

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=change_this_to_a_secure_random_string
APP_DEBUG=1
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Configure your db driver and server_version in config/packages/doctrine.yaml
# Format: postgresql://user:password@host:port/dbname
# For Docker: uses DB_* environment variables
# For Heroku: uses DATABASE_URL automatically
DATABASE_URL="postgresql://farkle_user:farkle_pass@db:5432/farkle_db?serverVersion=16"
###< doctrine/doctrine-bundle ###

# Application version (shared with legacy)
APP_VERSION=2.5.3
